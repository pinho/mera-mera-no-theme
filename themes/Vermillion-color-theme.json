		// Caixa de sugestões no editor
		"editorSuggestWidget.background": "#140204",
		"editorSuggestWidget.selectedBackground": "#220606",
		"editorSuggestWidget.foreground": "#ffeeee",
		"editorSuggestWidget.border": "#000",
		"editorSuggestWidget.highlightForeground": "#fc1431",
		
		// 
		"panel.background": "#140204",
		"panel.border": "#fc1431",
		"panelInput.border": "#FC1431",
		
		// Títulos das tabs
		"tab.border": "#140204",
		"tab.activeBorder": "#fc1431",
		"tab.hoverBackground": "#200204",
		"tab.inactiveBackground": "#0F0000",
		"tab.inactiveForeground": "#9f5255",
		"tab.activeModifiedBorder": "#faa307",
		"tab.activeForeground": "#ffffff",
		
		// Barra de menu ao lado (arquivos, extensões, etc...)
		"activityBar.background": "#140204",
		"activityBar.foreground": "#fc1431",
		"activityBarBadge.background": "#fb5607",
		"activityBarBadge.foreground": "#FFF",
		
		// Side menu/tree container
		"sideBar.background": "#140204",
		"sideBar.foreground": "#9f5255",
		"sideBar.dropBackground": "#140204",
		"sideBarTitle.foreground": "#fff",
		"sideBarSectionHeader.foreground": "#A1A1A1",
		"sideBarSectionHeader.background": "#140204",
		"sideBarSectionHeader.border": "#140204",
		"sideBar.border": "#140204",

		// Listas e seus itens
		"list.activeSelectionBackground": "#1f0808",
		"list.activeSelectionForeground": "#ffffff",
		"list.hoverBackground": "#300208",
		"list.hoverForeground": "#ffffff",
		"list.inactiveSelectionBackground": "#370617",
		"list.errorForeground": "#d00000",
		"list.focusForeground": "#ffffff",
		"list.focusBackground": "#2F0A0A",
		"list.inactiveFocusBackground": "#3F0A0A",
		
		"terminal.border": "#140204",
		"terminal.background": "#140204",
		"terminalCursor.foreground": "#f77f00",
		
		// Dialog notifications
		"notifications.foreground": "#FFFFFF",
		"notifications.background": "#140204",
		"notificationLink.foreground": "#FFDDDD",
		"notifications.border": "#000",
		"notificationCenter.border": "#1F0808",
		"notificationCenterHeader.foreground": "#FFDDDD",
		"notificationCenterHeader.background": "#140204",
		"notificationToast.border": "#000",
		"notificationsInfoIcon.foreground": "#7Aff7A",
		"notificationsErrorIcon.foreground": "#FA230A",
		"notificationsWarningIcon.foreground": "#FDD000",
		
		// Barra de status, a barra mais abaixo
		"statusBar.background": "#140204",
		"statusBar.foreground": "#FFDDDD",
		"statusBar.noFolderBackground": "#ff006e",
		"statusBar.noFolderForeground": "#FFF",
		"statusBarItem.activeBackground": "#2f0a0a",
		"statusBarItem.hoverBackground": "#100205",
		"statusBar.debuggingBackground": "#2b9348",
		"statusBar.debuggingForeground": "#FFF",

		// Bloco de botões/opções de debug
		"debugToolBar.background": "#131313",
		"debugToolBar.border": "#232323"
	},

	"tokenColors": [
		//--------------------------------------------------------------------------
		// Comentários (uma linha, blocos, doxygen)
		//--------------------------------------------------------------------------
		{
			"name": "Comments",
			"scope": [
				"comment",
				"comment.line",
				"comment.block",
				"comment.block.documentation"
			],
			"settings": {
				"foreground": "#622030",
				"fontStyle": "italic"
			}
		},
		//--------------------------------------------------------------------------
		// Configurações específicas para sintaxe do C++
		//  - Sinalizador de diretivas de pré-processamento
		// 	- Texto das Diretivas de Pré-processamento
		//  - Include Guards e Macros
		//--------------------------------------------------------------------------
		{
			"name": "C/C++ Preprocessor signal (#)",
			"scope": [
				"punctuation.definition.directive.cpp"
			],
			"settings": {
				"foreground": "#25a18e",
				"fontStyle": "bold"
			}
		},
		{
			"name": "C/C++ Preprocessor",
			"scope": [
				"entity.name.function.preprocessor.cpp",
				"string.quoted.other.lt-gt.include.cpp",
				"string.quoted.double.include.cpp",
				"punctuation.definition.string.begin",
				"punctuation.definition.string.end",
			],
			"settings": {
				// "foreground": "#e26d5c"
				"foreground": "#7ae582"
			}
		},
		{
			"name": "C/C++ Preprocessor directive",
			"scope": [
				"meta.preprocessor.include.cpp",
				"keyword.control.directive.include.cpp",
				"keyword.control.directive.define.cpp",
				"keyword.control.directive.undef.cpp",
				"keyword.control.directive.conditional.ifdef.cpp",
				"keyword.control.directive.conditional.ifndef.cpp",
				"keyword.control.directive.conditional.if.cpp",
				"keyword.control.directive.else.cpp",
				"keyword.control.directive.endif.cpp",
				"storage.type.class.doxygen",
				"storage.source.cmake"
			],
			"settings": {
				"foreground": "#25a18e"
			}
		},
		//--------------------------------------------------------------------------
		// Palavras reservadas da linguagem, como estruturas de
		// controle de fluxo (for, while, if, else ...) e tipos
		// primitivos (int, double, char ...)
		//--------------------------------------------------------------------------
		{
			"name": "General Keywords",
			"scope": [
				"keyword.control",
				"keyword.operator.cpp",
				"punctuation.section.parens.begin.bracket.round",
				"punctuation.section.parens.end.bracket.round",
				"punctuation.section.block.begin.bracket.curly",
				"punctuation.section.block.end.bracket.curly",
				"punctuation.separator.scope-resolution",
				"punctuation.terminator.statement",
				"punctuation.separator.dot-access",
				"keyword.cmake",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#ff0054"
			}
		},
		{
			"name": "Default Operators",
			"scope": [ 
				"keyword.operator.cpp",
				"storage.modifier.reference.cpp"
			],
			"settings": {
				"foreground": "#fff"
			}
		},
		{
			"name": "Default Operators -- Bold",
			"scope": [
				"keyword.operator.arithmetic",
				"keyword.operator.assignment",
				"keyword.operator.logical",
				"keyword.operator.new"
			],
			"settings": {
				"foreground": "#ffe66d",
				"fontStyle": "bold"
			}
		},
		//--------------------------------------------------------------------------
		// Funções e parâmetros
		//--------------------------------------------------------------------------
		{
			"name": "Functions & Brackets",
			"scope": [
				"entity.name.function",
				"punctuation.section.parameters.begin.bracket.round",
				"punctuation.section.parameters.end.bracket.round",
				"punctuation.section.block.begin.bracket.curly.function.definition",
				"punctuation.section.block.end.bracket.curly.function.definition",
				"punctuation.definition.capture.begin.lambda.cpp",
				"punctuation.definition.capture.end.lambda.cpp",
				"punctuation.definition.parameters.begin.lambda.cpp",
				"punctuation.definition.parameters.end.lambda.cpp",
				"punctuation.section.block.begin.bracket.curly.lambda.cpp",
				"punctuation.section.block.end.bracket.curly.lambda.cpp",
				"punctuation.section.method.begin.bracket.curly.java",
				"punctuation.section.method.end.bracket.curly.java",
				"keyword.other.special-method.dockerfile"
			],
			"settings": {
				"foreground": "#ffbd00"
			}
		},
		{
			"name": "Function Params",
			"scope": [
				"variable.parameter"
			],
			"settings": {
				"foreground": "#efebce",
				"fontStyle": "italic"
			}
		},
		{
			"name": "C/C++ preprocessor definitions 2",
			"scope": [ 
				"meta.preprocessor.macro.cpp",
				"entity.name.function.preprocessor"
			],
			"settings": {
				"foreground": "#FFFFFF",
				"fontStyle": "bold"
			}
		},
		//--------------------------------------------------------------------------
		// Keywords relacionadas à armazenamento,
		// Tipos primitivos, modificadores de acesso, palavras de definição
		//--------------------------------------------------------------------------
		{
			"name": "Primitive types",
			"scope": [
				"storage.type",
				"punctuation.section.block.begin.bracket.curly.class",
				"punctuation.section.block.end.bracket.curly.class",
				"punctuation.section.class.begin.bracket.curly.java",
				"punctuation.section.class.end.bracket.curly.java",
				"punctuation.separator.colon.inheritance"
			],
			"settings": {
				// "foreground": "#7209b7"
				"foreground": "#ef233c",
			}
		},
		{
			"name": "Default Modifiers",
			"scope": [
				"storage.modifier",
				"keyword.other.using.directive",
				"keyword.other.typedef",
				"keyword.other.typename",
				"keyword.operator.sizeof",
				"keyword.operator.increment",
				"punctuation.section.arguments.begin.bracket.round.operator.sizeof.cpp",
				"punctuation.section.arguments.end.bracket.round.operator.sizeof.cpp",
				"punctuation.section.block.begin.bracket.curly.namespace.cpp",
				"punctuation.section.block.end.bracket.curly.namespace.cpp",
				"punctuation.section.block.begin.bracket.curly.enum",
				"punctuation.section.block.end.bracket.curly.enum",
				"punctuation.section.block.begin.bracket.curly.struct",
				"punctuation.section.block.end.bracket.curly.struct",
				"punctuation.section.angle-brackets.start.template.definition.cpp",
				"punctuation.section.angle-brackets.end.template.definition.cpp",
				"meta.tail.extern.cpp"
			],
			"settings": {
				// "foreground": "#560bad" // roxo
				"foreground": "#d80032"
			}
		},
		{
			"name": "Comparison Operators",
			"scope": [
				"keyword.operator.comparison"
			],
			"settings": {
				"foreground": "#AAAAAA"
			}
		},
		//--------------------------------------------------------------------------
		// Comentários com documentação (types)
		//--------------------------------------------------------------------------
		{
			"name": "Docs in Comments",
			"scope": [
				"storage.type.class.doxygen",
				"storage.type.class.gtkdoc",
				// "markup.inline.raw.string"
			],
			"settings": {
				"foreground": "#883032",
				"fontStyle": "italic bold"
			}
		},
		//--------------------------------------------------------------------------
		// The auto-reference operator "this"
		//--------------------------------------------------------------------------
		{
			"name": "Auto-Pointer",
			"scope": [
				"variable.language.this",
				"variable.language.special.self.python"
			],
			"settings": {
				"foreground": "#8338ec",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Pointer Access Arrow",
			"scope": [
				"punctuation.separator.pointer-access.cpp"
			],
			"settings": {
				"foreground": "#747474",
				// "fontStyle": "bold"
			}
		},
		//--------------------------------------------------------------------------
		// Tipos definidos pelo programador/usuário
		// Tipos customizados, nomes de classes, structs, etc.
		//--------------------------------------------------------------------------
		{
			"name": "Custom types",
			"scope": [
				"entity.name.type",
				"entity.name.class"
			],
			"settings": {
				"foreground": "#fb5607"
			}
		},
		//--------------------------------------------------------------------------
		// String literais (texto definido com aspas)
		//  + caracteres de escape
		//  + caracteres de formatação com %
		//--------------------------------------------------------------------------
		{
			"name": "Strings",
			"scope": [
				"string.quoted.single",
				"string.quoted.double",
				"string.quoted.triple",
				"string.quoted.other"
			],
			"settings": {
				"foreground": "#7ae582"
			}
		},
		{
			"name": "Escape Characters",
			"scope": [
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#fff8a5",
				"fontStyle": "bold"
			}
		},
		{
			"name": "C/C++ Placeholder",
			"scope": [
				"constant.other.placeholder"
			],
			"settings": {
				"foreground": "#f95738"
			}
		},
		//--------------------------------------------------------------------------
		// Valores constantes:
		// Aplicado à valores numéricos (int, double, float), valores
		// booleanos (true, false) ...
		//--------------------------------------------------------------------------
		{
			"name": "Constant values",
			"scope": [
				"constant.numeric",
				"constant.language.true",
				"constant.language.false",
				"constant.rgb-value"
			],
			"settings": {
				"foreground": "#2176ff"
			}
		},
		//--------------------------------------------------------------------------
		// Desenvolvimento Web.
		// Cores de sintaxe para códigos HTML ou que incluem tags HTML
		// classes e outras definições CSS, Sass e Stylus.
		// Arquivos de componentes Vue.
		//--------------------------------------------------------------------------
		// Tags HTML
		{
			"name": "Tags HTML",
			"scope": [
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#FC2441"
			}
		},
		{
			"name": "Open/Close Tags '<' & '>'",
			"scope": [
				"punctuation.definition.tag.begin",
				"punctuation.definition.tag.end"
			],
			"settings": {
				"foreground": "#A1A1A1"
			}
		},
		{
			"name": "HTML Attributes",
			"scope": [
				"entity.other.attribute-name.html"
			],
			"settings": {
				"foreground": "#f6ae2d"
			}
		},
		//--------------------------------------------------------------------------
		// Nomes e Valores de propriedades CSS
		//--------------------------------------------------------------------------
		{
			"name": "CSS Property-names",
			"scope": [
				"support.type.property-name.css",
				"meta.property-name.scss",
				"meta.property-name.stylus",
				"punctuation.separator.key-value.css",
				"punctuation.separator.key-value.scss"
			],
			"settings": {
				"foreground": "#d6d6d6",
				"fontStyle": "italic"
			}
		},
		{
			"name": "CSS Property-values",
			"scope": [
				"meta.property-value.css",
				"meta.property-value.scss",
				"meta.property-value.stylus",
				"constant.numeric.css"
			],
			"settings": {
				"foreground": "#9381ff"
			}
		},
		{
			"name": "IDs CSS",
			"scope": [
				"entity.other.attribute-name.id.css",
				"entity.other.attribute-name.id.scss"
			],
			"settings": {
				"foreground": "#ffe066"
			}
		},
		{
			"name": "Classes CSS",
			"scope": [
				"entity.other.attribute-name.class.css",
				"entity.other.attribute-name.class.scss"
			],
			"settings": {
				"foreground": "#FF7B00"
			}
		},
		{
			"name": "Pseudo-classes CSS",
			"scope": [
				"entity.other.attribute-name.pseudo-class"
			],
			"settings": {
				"foreground": "#d883ff",
				"fontStyle": "italic"
			}
		},
		//--------------------------------------------------------------------------
		// Sass e SCSS
		//--------------------------------------------------------------------------
		{
			"name": "SCSS Variables",
			"scope": [
				"variable.scss",
				"meta.definition.variable.scss"
			],
			"settings": {
				"foreground": "#FDD000"
			}
		},
		//--------------------------------------------------------------------------
		// JavaScript & TypeScript
		// Definição de cores de sintaxe específicas para essas linguagens
		//--------------------------------------------------------------------------
		// { }
	]
}
