{
	"name": "Vermilion",
	"type": "dark",
	"author": "Ronaldd Pinho",
	"colors": {
		"foreground": "#ffffff",
		"textLink.foreground": "#9A9A9A",
		"textLink.activeForeground": "#ffffff",
		"focusBorder": "#600a0a",

		// Buttons and text inputs
		"button.foreground": "#ffffff",
		"button.background": "#140204",
		"button.hoverBackground": "#000",
		"input.background": "#111",
		"input.foreground": "#f3722c",
		"input.border": "#000",
		"input.placeholderForeground": "#555",
		"badge.background": "#FFD000",
		"badge.foreground": "#111",
		
		// Página inicial
		"welcomePage.background": "#140204",
		"welcomePage.buttonBackground": "#140204",
		"welcomePage.buttonHoverBackground": "#9d0208",
		
		// Editor
		"editor.background": "#140204",
		"editor.foreground": "#ffdddd",
		"editor.selectionBackground": "#5554",
		"editor.selectionForeground": "#000",
		"editor.selectionHighlightBackground": "#000b",
		"editor.lineHighlightBorder": "#1f0808",
		"editor.lineHighlightBackground": "#1f0808",
		"editorCursor.foreground": "#f94144",
		"editorCursor.background": "#f94144",
		"editorRuler.foreground": "#300304",
		"editorLineNumber.foreground": "#555",
		"editorLineNumber.activeForeground": "#888",
		"editorGroupHeader.tabsBackground": "#140204",
		"editorGutter.background": "#140204",
		"editorGutter.modifiedBackground": "#FFF75E",
		"editorGutter.addedBackground": "#7aff7a",
		"editorGutter.deletedBackground": "#E82510",
		"editorGutter.foldingControlForeground": "#ff0000",
		"editorIndentGuide.background": "#522",
		"editorIndentGuide.activeBackground": "#b93133",
