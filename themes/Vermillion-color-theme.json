				"punctuation.definition.parameters.begin",
				"punctuation.definition.parameters.end",
				"punctuation.definition.capture.begin.lambda.cpp",
				"punctuation.definition.capture.end.lambda.cpp",
				"punctuation.definition.parameters.begin.lambda.cpp",
				"punctuation.definition.parameters.end.lambda.cpp",
				"punctuation.definition.parameters.begin.bracket.round.java",
				"punctuation.definition.parameters.end.bracket.round.java",
				"punctuation.definition.parameters.begin.python",
				"punctuation.definition.parameters.end.python",
				"punctuation.section.block.begin.bracket.curly.lambda.cpp",
				"punctuation.section.block.end.bracket.curly.lambda.cpp",
				"punctuation.section.method.begin.bracket.curly.java",
				"punctuation.section.method.end.bracket.curly.java",
				"punctuation.section.function.begin.python",
				"keyword.other.special-method.dockerfile",
				"meta.function-call.generic.python"
			],
			"settings": {
				"foreground": "#fcca46"
			}
		},
		{
			"name": "Function Params",
			"scope": [
				"variable.parameter",
				"variable.parameter.function-call.python"
			],
			"settings": {
				"foreground": "#efef80",
				"fontStyle": "italic"
			}
		},
		{
			"name": "C/C++ preprocessor definitions 2",
			"scope": [ 
				"meta.preprocessor.macro.cpp",
				"entity.name.function.preprocessor"
			],
			"settings": {
				"foreground": "#FFFFFF",
				"fontStyle": "bold"
			}
		},
		{
			"name": "Python Magic Functions",
			"scope": [ "support.function.magic.python" ],
			"settings": {
				"foreground": "#fff75e"
			}
		},
