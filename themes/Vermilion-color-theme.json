{
	"name": "Vermilion",
	"type": "dark",
	"author": "Ronaldd Pinho",
	"colors": {
		"foreground": "#ffffff",
		"textLink.foreground": "#fc1431",
		"textLink.activeForeground": "#ffffff",
		"focusBorder": "#600a0a",

		// Buttons and text inputs
		"button.foreground": "#ffffff",
		"button.background": "#FA230A",
		"button.hoverBackground": "#FC440A",
		"input.background": "#111",
		"input.foreground": "#ffd000",
		"input.border": "#000",
		"input.placeholderForeground": "#444",

		"badge.background": "#FA230A",
		
		// Página inicial
		"welcomePage.background": "#1f0808",
		"welcomePage.buttonBackground": "#2f0808",
		"welcomePage.buttonHoverBackground": "#2f080877",
		
		// Editor
		"editor.background": "#1f0808",
		"editor.foreground": "#ffdddd",
		"editor.selectionBackground": "#fc143120",
		"editor.selectionForeground": "#000",
		"editor.selectionHighlightBackground": "#000b",
		"editor.lineHighlightBorder": "#370617",
		"editor.lineHighlightBackground": "#370617",
		"editorCursor.foreground": "#FDD000",
		"editorCursor.background": "#FF9500",
		"editorRuler.foreground": "#3F0A0A",
		"editorLineNumber.foreground": "#ffd1e333",
		"editorLineNumber.activeForeground": "#ffff",
		"editorGroupHeader.tabsBackground": "#1F0A0A",
		"editorGutter.background": "#1F0808",
		"editorGutter.modifiedBackground": "#FFF75E",
		"editorGutter.addedBackground": "#7aff7a",
		"editorGutter.deletedBackground": "#E82510",
		"editorGutter.foldingControlForeground": "#ff0000",
		"editorIndentGuide.background": "#420606",
		"editorIndentGuide.activeBackground": "#fc143190",
		
		// Caixa de sugestões no editor
		"editorSuggestWidget.background": "#2f0a0a",
		"editorSuggestWidget.selectedBackground": "#220606",
		"editorSuggestWidget.foreground": "#ffeeee",
		"editorSuggestWidget.border": "#3f0a0a",
		"editorSuggestWidget.highlightForeground": "#fc1431",
		
		// 
		"panel.background": "#2F0A0A",
		"panel.border": "#fc1431",
		"panelInput.border": "#FC1431",
		
		// Títulos das tabs
		"tab.border": "#1f0808",
		"tab.activeBorder": "#fc1431",
		"tab.hoverBackground": "#14030a",
		"tab.inactiveBackground": "#1f0808",
		"tab.inactiveForeground": "#ffffff90",
		"tab.activeModifiedBorder": "#faa307",
		"tab.activeForeground": "#ffffff",
		
		// Barra de menu ao lado (arquivos, extensões, etc...)
		"activityBar.background": "#1f0808",
		"activityBar.foreground": "#fc1431",
		"activityBarBadge.background": "#FF7B00",
		"activityBarBadge.foreground": "#FFF",
		
		// Side menu/tree container
		"sideBar.background": "#1f0808",
		"sideBar.foreground": "#ffdddd",
		"sideBar.dropBackground": "#1f0a0a",
		"sideBarTitle.foreground": "#fff",
		"sideBarSectionHeader.foreground": "#A1A1A1",
		"sideBarSectionHeader.background": "#1f0808",
		"sideBarSectionHeader.border": "#1f0808",

		// Listas e seus itens
		"list.activeSelectionBackground": "#3F0A0A",
		"list.activeSelectionForeground": "#FFF75E",
		"list.hoverBackground": "#100305",
		"list.hoverForeground": "#FDD000",
		"list.inactiveSelectionBackground": "#370617",
		"list.focusBackground": "#1F0808",
		"list.inactiveFocusBackground": "#3F0A0A",
		"list.errorForeground": "#FC1431",
		"list.focusForeground": "#FDD000",
		
		"terminal.border": "#fc1431",
		"terminalCursor.foreground": "#FFD000",
		
		// Dialog notifications
		"notifications.foreground": "#FFFFFF",
		"notifications.background": "#1F0808",
		"notificationLink.foreground": "#FFDDDD",
		"notifications.border": "#111",
		"notificationCenter.border": "#1F0808",
		"notificationCenterHeader.foreground": "#FFDDDD",
		"notificationCenterHeader.background": "#1F0808",
		"notificationToast.border": "#2F0A0A",
		"notificationsInfoIcon.foreground": "#7Aff7A",
		"notificationsErrorIcon.foreground": "#FA230A",
		"notificationsWarningIcon.foreground": "#FDD000",
		
		// Barra de status, a barra mais abaixo
		"statusBar.background": "#1f0808",
		"statusBar.foreground": "#FFDDDD",
		"statusBar.noFolderBackground": "#fc1431",
		"statusBar.noFolderForeground": "#FFF",
		"statusBarItem.activeBackground": "#2f0a0a",
		"statusBarItem.hoverBackground": "#100205",
		"statusBar.debuggingBackground": "#99CC00",
		"statusBar.debuggingForeground": "#FFF",

		// Bloco de botões/opções de debug
		"debugToolBar.background": "#131313",
		"debugToolBar.border": "#1F0808"
	},

	"tokenColors": [
		//--------------------------------------------------
		// Comentários (uma linha, blocos, doxygen)
		//--------------------------------------------------
		{
			"name": "Comments",
			"scope": [
				"comment",
				"comment.line",
				"comment.block",
				"comment.block.documentation"
			],
			"settings": {
				"foreground": "#e5758090",
				"fontStyle": "italic"
			}
		},
		//--------------------------------------------------
		// Configurações específicas para sintaxe do C++
		//  - Sinalizador de diretivas de pré-processamento
		// 	- Texto das Diretivas de Pré-processamento
		//  - Include Guards e Macros
		//--------------------------------------------------
		{
			"name": "C/C++ Preprocessor signal (#)",
			"scope": [
				"punctuation.definition.directive.cpp"
			],
			"settings": {
				"foreground": "#FC1431",
				"fontStyle": "bold"
			}
		},
		{
			"name": "C/C++ Preprocessor",
			"scope": [
				"entity.name.function.preprocessor.cpp",
				"string.quoted.other.lt-gt.include.cpp",
				"string.quoted.double.include.cpp",
			],
			"settings": {
				"foreground": "#C5C5C5"
			}
		},
		{
			"name": "C/C++ Preprocessor directive",
			"scope": [
				"meta.preprocessor.include.cpp",
				"punctuation.definition.string.begin.cpp",
				"punctuation.definition.string.end.cpp",
				"keyword.control.directive.include.cpp",
				"keyword.control.directive.define.cpp",
				"keyword.control.directive.undef.cpp",
				"keyword.control.directive.ifdef.cpp",
				"keyword.control.directive.ifndef.cpp",
				"keyword.control.directive.conditional.if.cpp",
				"keyword.control.directive.else.cpp"
				"keyword.control.directive.endif.cpp",
				"storage.type.class.doxygen"
			],
			"settings": {
				"foreground": "#979797"
			}
		},
		//--------------------------------------------------------------
		// Palavras reservadas da linguagem, como estruturas de
		// controle de fluxo (for, while, if, else ...) e tipos
		// primitivos (int, double, char ...)
		//--------------------------------------------------------------
		{
			"name": "General Keywords",
			"scope": [
				"keyword.control",
				"keyword.operator.cpp",
				"storage.modifier.reference.cpp",
				"punctuation.section.parens.begin.bracket.round",
				"punctuation.section.parens.end.bracket.round",
				"punctuation.section.block.begin.bracket.curly",
				"punctuation.section.block.end.bracket.curly",
				"punctuation.separator.scope-resolution",
				"punctuation.terminator.statement",
				"punctuation.separator.dot-access",
				"entity.name.tag"
			],
			"settings": {
				"foreground": "#fA230A"
			}
		},
		{
			"name": "Default Operators",
			"scope": [
				"keyword.operator.arithmetic",
				"keyword.operator.assignment",
				"keyword.operator.logical",
				"keyword.operator.new"
			],
			"settings": {
				"foreground": "#FFFFFF",
				"fontStyle": "bold"
			}
		},
		//--------------------------------------------------------------
		// Funções e parâmetros
		//--------------------------------------------------------------
		{
			"name": "Functions & Brackets",
			"scope": [
				"entity.name.function",
				"punctuation.section.parameters.begin.bracket.round",
				"punctuation.section.parameters.end.bracket.round",
				"punctuation.section.block.begin.bracket.curly.function.definition",
				"punctuation.section.block.end.bracket.curly.function.definition"
			],
			"settings": {
				"foreground": "#ffca08"
			}
		},
		{
			"name": "Function Params",
			"scope": [
				"variable.parameter"
			],
			"settings": {
				"foreground": "#f37748",
				"fontStyle": "italic"
			}
		},
		{
			"name": "C/C++ preprocessor definitions 2",
			"scope": [ 
				"meta.preprocessor.macro.cpp",
				"entity.name.function.preprocessor"
			],
			"settings": {
				"foreground": "#DDCCCC"
			}
		},
		//------------------------------------------------------------------
		// Keywords relacionadas à armazenamento,
		// Tipos primitivos, modificadores de acesso, palavras de definição
		//------------------------------------------------------------------
		{
			"name": "Primitive types",
			"scope": [
				"storage.type",
				"punctuation.section.block.begin.bracket.curly.class",
				"punctuation.section.block.end.bracket.curly.class",
				"punctuation.separator.colon.inheritance"
			],
			"settings": {
				"foreground": "#9381ff"
			}
		},
		{
			"name": "Default Modifiers",
			"scope": [
				"storage.modifier",
				"keyword.other.using.directive",
				"keyword.operator.sizeof",
				"keyword.operator.comparison",
				"keyword.operator.increment",
				"punctuation.section.arguments.begin.bracket.round.operator.sizeof.cpp",
				"punctuation.section.arguments.end.bracket.round.operator.sizeof.cpp"
			],
			"settings": {
				"foreground": "#6351cf"
			}
		},
		//------------------------------------------------------------
		// The auto-reference operator "this"
		//------------------------------------------------------------
		{
			"name": "Auto-Pointer",
			"scope": [
				"variable.language.this"
			],
			"settings": {
				"foreground": "#20CF55",
				"fontStyle": "italic"
			}
		},
		{
			"name": "Pointer Access Arrow",
			"scope": [
				"punctuation.separator.pointer-access.cpp"
			],
			"settings": {
				"foreground": "#024F15",
				"fontStyle": "bold"
			}
		},
		//------------------------------------------------------------------
		// Tipos definidos pelo programador/usuário
		// Tipos customizados, nomes de classes, structs, etc.
		//------------------------------------------------------------------
		{
			"name": "",
			"scope": [
				"entity.name.type",
				"entity.name.class"
			],
			"settings": {
				"foreground": "#FF7B00"
			}
		},
		//------------------------------------------------------------------
		// String literais (texto definido com aspas)
		//  + caracteres de escape
		//  + caracteres de formatação com %
		//------------------------------------------------------------------
		{
			"name": "Strings",
			"scope": [
				"string.quoted.single",
				"string.quoted.double",
				"string.quoted.triple",
				"string.quoted.other",
				"punctuation.definition.string.begin",
				"punctuation.definition.string.end"
			],
			"settings": {
				"foreground": "#7ae582"
			}
		},
		{
			"name": "Escape Characters",
			"scope": [
				"constant.character.escape"
			],
			"settings": {
				"foreground": "#f37748"
			}
		},
		{
			"name": "C/C++ Placeholder",
			"scope": [
				"constant.other.placeholder"
			],
			"settings": {
				"foreground": "#cc444b"
			}
		},
		//------------------------------------------------------------------
		// Valores constantes:
		// Aplicado à valores numéricos (int, double, float), valores
		// booleanos (true, false) ...
		//------------------------------------------------------------------
		{
			"name": "Constant values",
			"scope": [
				"constant.numeric",
				"constant.language.true",
				"constant.language.false",
				"constant.rgb-value"
			],
			"settings": {
				"foreground": "#FC1431"
			}
		}
	]
}
